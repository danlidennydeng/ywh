<h2>登录</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
   
    <%= f.email_field :email, autofocus: true, placeholder: "请输入电子邮件信箱" %>
  </div>
<p></p>
  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: "请输入新密码" %>
  </div>
