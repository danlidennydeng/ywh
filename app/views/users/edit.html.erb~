<h1>Editing Users</h1>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> </h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :全名 %>
    <%= f.text_field :fullname %>
  </div>

  <div class="field">
    <%= f.label :出生年 %>
    <%= f.text_field :birth_year %>
  </div>

  <div class="field">
    <%= f.label :月 %>
    <%= f.text_field :birth_month %>
  </div>

  <div class="field">
    <%= f.label :日 %>
    <%= f.text_field :birth_day %>
  </div>

  <div class="field">
    <%= f.label :性别 %>
    <%= f.collection_select(:sex_id, Sex.all, :id, :name) %>
  </div>

  <div class="field">
    <%= f.label :安全级别 %>
    <%= f.collection_select(:security_id, Security.all.order(level: :asc), :id, :level) %>
  </div>

  <div class="field">
    <%= f.label :角色 %>
    <%= f.collection_select(:role_id, Role.all, :id, :name) %>
  </div>

  
  <%= f.hidden_field :edited_by, :value => current_user.id %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'back', users_path %>
