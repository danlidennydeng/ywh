<p id="notice"><%= notice %></p>
<%= link_to '竞选人在此登录注册，上传竞选纲领', root_url, class: "btn btn-primary" %>
<h3>业主委员会竞选人</h3>
(顺序不重要)</br>
<ol type='1'>
    <% @candidates.each do |candidate| %>
      <li>
        
        <%= candidate.fullname %></br>
         <%= image_tag candidate.picture.url if candidate.picture? %>
        个人简介:</br> <%= candidate.introduction %></br>
        竞选纲领：</br> <%= candidate.speech %></br>
       
        <%= link_to '更多信息', candidate, class: "btn btn-default" %>

	<% if can?(:manage, candidate) %> 
            <%= link_to '更改信息', edit_candidate_path(candidate), class: "btn btn-primary" %>
        
               
            <%= link_to '删除信息', candidate, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></br>
	<% end %>
      </li>
<p></p>
    <% end %>
 
<%= link_to '竞选人在此登录注册，上传竞选纲领', root_url, class: "btn btn-primary" %>

