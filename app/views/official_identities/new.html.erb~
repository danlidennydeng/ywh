<h1>New Official Identity</h1>

<%= form_for(@official_identity, html: { multipart: true }) do |f| %>
  <% if @official_identity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@official_identity.errors.count, "error") %> prohibited this official_identity from being saved:</h2>

      <ul>
      <% @official_identity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 
    <%= f.hidden_field :user_id, :value => current_user.id %>
  

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

   <div class="field">
    <%= f.label :image1, "Upload:" %>
    <%= f.file_field :image1 %>
  </div>

  <div class="field">
    <%= f.label :note %>
    <%= f.text_area :note %>
  </div>

  <div class="field">
    <%= f.label :edited_by %>
    <%= f.number_field :edited_by %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', official_identities_path %>
